#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.expand_path('../../lib', __FILE__))
require 'texas_holdem/texas_holdem_dealer'

game = TexasHoldemDealer.new HoldemBetManager.new,
                             HandEvaluator.new,
                             [Player.new("Hays"),
                              Player.new("Computer 1"),
                              Player.new("Computer 2"),
                              Player.new("Computer 3")]
game.play_game
game.hole_cards
game.the_flop
game.the_turn
game.the_river
puts '*******'
