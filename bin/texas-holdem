#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.expand_path('../../lib', __FILE__))

require 'texas_holdem/bet_manager'
require 'texas_holdem/hand_evaluator'
require 'texas_holdem/player'
require 'texas_holdem/texas_holdem_dealer'

names = %w(Hays Computer\ 1 Computer\ 2 Computer\ 3)
players = names.map { |name| Player.new name }
game = TexasHoldemDealer.new BetManager.new, HandEvaluator.new, players
game.play_game
